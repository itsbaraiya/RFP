generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  role        Role     @default(CUSTOMER)
  avatar      String?
  isBusy      Boolean  @default(false)
  status      String?
  designation String?  @default("")
  rfps        RFP[]
  rfpCollaborations RFPCollaborator[]
}

model RFP {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  filePath    String
  status      RFPStatus  @default(PENDING)
  userId      Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  questions   Question[]
  user        User       @relation(fields: [userId], references: [id])
  collaborators RFPCollaborator[]
}

model Question {
  id                Int      @id @default(autoincrement())
  rfpId             Int
  questionText      String
  aiSuggestedAnswer String?
  userEditedAnswer  String?
  section           String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  rfp               RFP      @relation(fields: [rfpId], references: [id])
}

enum Role {
  ADMIN
  CUSTOMER
  COLLABORATOR
}

enum RFPStatus {
  PENDING
  ANALYZED
  IN_PROGRESS
  COMPLETED
}

enum CollaboratorStatus {
  INVITED
  ACCEPTED
  REVOKED
}

model RFPCollaborator {
  id      Int    @id @default(autoincrement())
  rfpId   Int
  userId  Int
  role    String? @default("Collaborator")
  status     CollaboratorStatus @default(INVITED)
  inviteToken String? 
  invitedAt  DateTime? 
  acceptedAt DateTime?

  rfp     RFP    @relation(fields: [rfpId], references: [id], onDelete: Cascade)
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([rfpId, userId]) // prevent duplicates
}